<?
  // Activate Syndetics Plus if necessary:
  if ($this->syndeticsPlus()->isActive()) {
    echo $this->headScript()->appendFile($this->syndeticsPlus()->getScript());
  }
  // Add RDF header link if applicable:
  if ($this->export()->recordSupportsFormat($this->driver, 'RDF')) {
    $this->headLink()->appendAlternate($this->recordLink()->getActionUrl($this->driver, 'RDF'), 'application/rdf+xml', 'RDF Representation');
  }

  $this->defaultTab = strtolower($this->defaultTab);

  function escapeJSAttr($op) {
    return preg_replace("/\W/", "_", $op);
  }
?>
<div class="search_tabs record recordId source<?=$this->escapeHtmlAttr($this->driver->getResourceSource())?>" id="tabs_<?=escapeJSAttr($this->driver->getUniqueId())?>">
  <input type="hidden" value="<?=$this->escapeHtmlAttr($this->driver->getUniqueId())?>" class="hiddenId" id="record_id_<?=escapeJSAttr($this->driver->getUniqueId())?>" />
  <input type="hidden" value="<?=$this->escapeHtmlAttr($this->driver->getResourceSource()) ?>" class="hiddenSource" />
  <?=$this->flashmessages()?>

  <a name="tabnav"></a>
  <ul class="recordTabs nav nav-tabs">
    <? $coreMetadata = trim($this->record($this->driver)->getCoreMetadata()); ?>
    <? if (!empty($coreMetadata)): ?>
      <li<? if($this->defaultTab === 'information'): ?> class="active"<? endif; ?>>
        <a id="information_<?=escapeJSAttr($this->driver->getUniqueId())?>" data-toggle="tab" data-target="#information-tab_<?=escapeJSAttr($this->driver->getUniqueId())?>" class="noajax">
          <?=$this->translate('ajaxview_label_information') ?>
        </a>
      </li>
    <? endif; ?>

    <? foreach ($this->tabs as $tab => $obj): ?>
      <? // add current tab to breadcrumbs if applicable:
        $desc = $obj->getDescription();
        $tab_classes = array();
        if ($this->defaultTab === strtolower($tab)) {
          if (!$this->ajaxTabs || !$obj->supportsAjax()) {
            $tab_classes[] = 'active';
          }
        }
        if (!$obj->isVisible()) { $tab_classes[] = 'hidden'; }
        if (!$obj->supportsAjax()) { $tab_classes[] = 'noajax'; }
      ?>
      <li<?=count($tab_classes) > 0 ? ' class="' . implode(' ', $tab_classes) . '"' : ''?>>
        <a id="<?=strtolower($tab)?>_<?=escapeJSAttr($this->driver->getUniqueId())?>" href="<?=$this->recordLink()->getTabUrl($this->driver, $tab)?>#tabnav" data-toggle="tab" data-target="#<?=strtolower($tab)?>-tab_<?=escapeJSAttr($this->driver->getUniqueId())?>"><?=$this->transEsc($desc)?></a>
      </li>
    <? endforeach; ?>

    <? $toolbar = trim($this->record($this->driver)->getToolbar()); ?>
    <? if (!empty($toolbar)): ?>
      <li<? if($this->defaultTab === 'tools'): ?> class="active"<? endif; ?>>
        <a id="tools_<?=escapeJSAttr($this->driver->getUniqueId())?>" data-toggle="tab" data-target="#tools-tab_<?=escapeJSAttr($this->driver->getUniqueId())?>" class="noajax">
        <?=$this->translate('ajaxview_label_tools') ?>
        </a>
      </li>
    <? endif; ?>

    <? $list = $this->related()->getList($this->driver); ?>
    <? if (!empty($list)): ?>
      <li<? if($this->defaultTab === 'related'): ?> class="active"<? endif; ?>>
        <a id="related_<?=escapeJSAttr($this->driver->getUniqueId())?>" data-toggle="tab" data-target="#related-tab_<?=escapeJSAttr($this->driver->getUniqueId())?>" class="noajax">
          <?=$this->transEsc("Related Items")?>
        </a>
      </li>
    <? endif; ?>
  </ul>
  <div class="tab-content">
    <? if (!empty($coreMetadata)): ?>
      <div class="tab-pane<? if($this->defaultTab === 'information'): ?> active<? endif; ?>" id="information_<?=escapeJSAttr($this->driver->getUniqueId())?>-tab">
        <?=$coreMetadata ?>
      </div>
    <? endif; ?>
    <? foreach ($this->tabs as $tab => $obj): ?>
      <div class="tab-pane<? if($this->defaultTab === strtolower($tab)): ?> active<? endif; ?>" id="<?=strtolower($tab)?>_<?=escapeJSAttr($this->driver->getUniqueId())?>-tab"></div>
    <? endforeach; ?>
    <? if (!empty($toolbar)): ?>
      <div class="tab-pane<? if($this->defaultTab === 'tools'): ?> active<? endif; ?>" id="tools_<?=escapeJSAttr($this->driver->getUniqueId())?>-tab">
        <?=$toolbar ?>
      </div>
    <? endif; ?>
    <? if (!empty($list)): ?>
      <div class="tab-pane<? if($this->defaultTab === 'related'): ?> active<? endif; ?>" id="related_<?=escapeJSAttr($this->driver->getUniqueId())?>-tab">
        <? foreach ($list as $current): ?>
          <?=$this->related()->render($current)?>
        <? endforeach; ?>
      </div>
     <? endif; ?>
  </div>
</div>
<span class="Z3988" title="<?=escapeJSAttr($this->driver->getOpenURL())?>"></span>
