          <span title="<?=$item['desc'] ?>"><?=$this->truncate($item['desc'], 50) ?></span></br>
        <? endif; ?>
        <span style="font-size:85%;font-style:italic">
          from <?=$item['provider'] ?>
        </span>
      </dd>
    <? endforeach; ?>
  </ul>
<? endif; ?>
